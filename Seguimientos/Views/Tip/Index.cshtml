@model Seguimientos.Models.Tip

<h2>Tip Calculator</h2>

<form asp-action="Calculate" method="post">
    <input type="number" step="0.01" name="BillAmount" placeholder="Bill Amount" required />
    <input type="number" name="Percentage" placeholder="Tip %" required />
    <button type="submit">Calculate</button>
</form>

@if (Model != null && Model.TipAmount > 0)
{
    <p><strong>Tip:</strong> @Model.TipAmount</p>
    <p><strong>Total:</strong> @Model.TotalAmount</p>
}

